{
    "version": "0.1.0",
    "command": "cmdx",
    "isShellCommand": true,
    "showOutput": "silent",
    "args": [
        "/c"
    ],
    "tasks": [
        {
            "taskName": "restore",
            "suppressTaskName": true,
            "args" : ["dotnet", "restore"],
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "release",
            "suppressTaskName": true,
            "args" : ["dotnet", "publish", "--configuration", "Release", "--runtime", "win10-x64"],
            "showOutput": "always",
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "build",
            "suppressTaskName": true,
            "args" : ["dotnet", "build"],
            "isTestCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "test",
            "suppressTaskName": true,
            "args" : ["dotnet", "test", "C:\\_APPLICATIONS\\GuardRex.AspNetCore.Server.IISIntegration.Tools"],
            "isTestCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "info",
            "suppressTaskName": true,
            "args" : ["dotnet", "--info"],
            "showOutput": "always"
        }
    ]
}

